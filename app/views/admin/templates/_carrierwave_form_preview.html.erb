<div style="margin: 0 0 0.5em 0;">

  <div style="float: left;">
    <%= link_to preview, :class => "fancybox" do %>
      <%= image_tag thumb, options.merge(:alt => preview) %>
    <% end %>
  </div>

  <div style="float: left;">
    <ul style="margin: 0 0 0 15px!important;">
      <li><strong>File name:</strong> <%= attachment.identifier %></li>
      <li><strong>File type:</strong> <%= attachment.content_type %></li>
    </ul>
  </div>

  <div class="clear"></div>
</div>